{
  "version": "0.2.0",
  "configurations": [
{
  "type": "node",
  "request": "launch",
  "name": "Mocha Tests",
  "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
  "args": [
    "-u",
    "tdd",
    "--timeout",
    "999999",
    "--colors",
    "${workspaceFolder}/test/**/*.js",
    "--require",
    "babel-core/register"
  ],
  "env": { "NODE_ENV": "development"},
  "internalConsoleOptions": "openOnSessionStart"
}
  ],
  "compounds": []
}